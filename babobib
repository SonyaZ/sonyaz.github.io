function func3(){
var j;
 j=Number(document.getElementById("hochy_est").value);
 document.getElementById("bib").innerHTML ="<h1>"+"Единицы"+"<br>"+ j%10+"</h1>";
 e=j%100;
 f=e%10
 h= (e - f) / 10
 document.getElementById("bob").innerHTML ="<h1>"+"Десятки"+"<br>"+ h +"</h1>";
 y=j%100;

 r= (j -y ) / 100
 document.getElementById("bab").innerHTML ="<h1>"+"Сотни"+"<br>"+r +"</h1>";
 }

function func4(){
var j;
 j=Number(document.getElementById("hochesh_est").value);
 document.getElementById("hih").innerHTML ="<h1>"+"Единицы"+"<br>"+ j%10+"</h1>";
 
 f=j%10

 h= (j- f) / 10
 document.getElementById("hoh").innerHTML ="<h1>"+"Десятки"+"<br>"+ h +"</h1>";
 y=j%100;
 }


