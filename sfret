 y=j%100;
 d=h+f
 var s
 s=document.getElementById("huh").innerHTML ="<h1>"+"сумма чисел"+"<br>"+ d +"</h1>";
 w=f*h
 var t
  t=document.getElementById("heh").innerHTML ="<h1>"+"произвидение чисел"+"<br>"+ w +"</h1>";
 }


